                    <input value={carSearch} onChange={(e) => setCarSearch(e.target.value)} placeholder="Search by car number" style={{ background: '#1a1a1a', color: '#fff', border: '1px solid #333', borderRadius: 8, padding: '8px 12px', width: 200 }} />
